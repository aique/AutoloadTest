<?php

	require_once 'Locale.php';
	require_once 'LocaleHelper.php';
	require_once 'LocaleFileHelper.php';
	require_once 'I18nManager.php';
	require_once 'I18nFileManager.php';
	require_once 'text/TextClient.php';
	require_once 'country/CountryClient.php';
	require_once 'location/LocationClient.php';
	require_once 'date/Date.php';
	require_once 'date/DateClient.php';
	require_once 'money/MoneyClient.php';

	/**
	 * Process all the requests to the I18n API.
	 * 
	 * @author [Q]
	 */
	class I18n
	{
		public static function getText($textId, $params = null)
		{
			return TextClient::getText($textId, $params);
		}
		
		public static function getEnumerationText($enumeratedObjects)
		{
			return TextClient::getEnumerationText($enumeratedObjects);
		}
		
		public static function getTextFromFile($filePath, $params = null)
		{
			return FileUtil::getIncludeContents($filePath, $params);
		}
		
		public static function getDate($date, $format = "short")
		{
			return DateClient::getDate($date, $format);
		}
		
		public static function getMonthName($monthNumber)
		{
			return DateClient::getMonthName($monthNumber);
		}
		
		public static function getMoney($money, $format = "currency", $locale)
		{			
			return MoneyClient::getMoney($money, $format, $locale);
		}
		
		public static function getCountry($locale, $countries)
		{
			return CountryClient::getCountry($locale, $countries);
		}
		
		public static function getLocation($locale)
		{
			return LocationClient::getLocation($locale);
		}
		
	}

?>