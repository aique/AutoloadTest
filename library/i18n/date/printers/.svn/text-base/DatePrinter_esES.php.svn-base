<?php
	
	class DatePrinter_esES
	{
		public static function doPrint($date, $format)
		{
			switch($format)
			{
				case(DateFormat::$SHORT):
					return self::printShortFormat($date);
				break;
				case(DateFormat::$LONG):
					return self::printLongFormat($date);
				break;
				case(DateFormat::$MONTH):
					return self::printMonthFormat($date);
				break;
			}
		}
		
		public static function getMonthName($monthNumber)
		{
			$monthName = "";
				
			switch($monthNumber)
			{
				case(1):
					$monthName = "Enero";
					break;
				case(2):
					$monthName = "Febrero";
					break;
				case(3):
					$monthName = "Marzo";
					break;
				case(4):
					$monthName = "Abril";
					break;
				case(5):
					$monthName = "Mayo";
					break;
				case(6):
					$monthName = "Junio";
					break;
				case(7):
					$monthName = "Julio";
					break;
				case(8):
					$monthName = "Agosto";
					break;
				case(9):
					$monthName = "Septiembre";
					break;
				case(10):
					$monthName = "Octubre";
					break;
				case(11):
					$monthName = "Noviembre";
					break;
				case(12):
					$monthName = "Diciembre";
					break;
					// TODO Improve error management
				default:
					$monthName = false;
				break;
			}
				
			return $monthName;
				
		}
		
		private static function printShortFormat($date)
		{
			return $date->getDay() . '\\' . $date->getMonth() . '\\' . $date->getYear();
		}
		
		private static function printLongFormat($date)
		{
			return $date->getDay() . ' de ' . $date->getMonthName() . ' de ' . $date->getYear();
		}
		
		private static function printMonthFormat($date)
		{
			return $date->getMonthName() . ' ' . $date->getYear();
		}
		
	}

?>