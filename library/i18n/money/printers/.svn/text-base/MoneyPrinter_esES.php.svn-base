<?php
	
	class MoneyPrinter_esES
	{
		public static function doPrint($money, $userSessionState, $format)
		{
			$money = number_format($userSessionState->getCurrencyConverter()->getPrice($money), 2, ",", ".");
			
			$currency = "";
			$printValue = "";
				
			switch($userSessionState->getCurrencyConverter()->getDefaultCurrency())
			{
				case(CurrencyConst::EURO):
						
					if($money > 1)
					{
						$currency = "€";
					}
					else
					{
						$currency = "€";
					}
					
					$printValue = $money . ' ' . $currency;
						
				break;
				
				case(CurrencyConst::DOLLAR):
			
					if($money > 1)
					{
						$currency = "$";
					}
					else
					{
						$currency = "$";
					}
					
					$printValue = $currency . ' ' . $money;
						
				break;
				
				case(CurrencyConst::POUND):
						
					if($money > 1)
					{
						$currency = "£";
					}
					else
					{
						$currency = "£";
					}
					
					$printValue = $currency . ' ' . $money;
			
				break;
			}
				
			if($format == "currency")
			{
				return $printValue;
			}
			elseif($format == "amount")
			{
				return $money;
			}
			else
			{
				return $money;
			}
		}
	}

?>