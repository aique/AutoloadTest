<?php

	class TextId
	{
		private $type, $media, $page, $id;
		
		public function __construct($textId)
		{
			$tokens = explode("_", $textId, 4);
			
			if(count($tokens) >= 4)
			{
				$this->type = strtolower($tokens[0]);
				$this->media = strtolower($tokens[1]);
				$this->page = strtolower($tokens[2]);
				$this->id = strtolower($tokens[3]);
			}
		}
		
		public function getType()
		{
			return $this->type;
		}
		
		public function getMedia()
		{
			return $this->media;
		}
		
		public function getPage()
		{
			return $this->page;
		}
		
		public function getId()
		{
			return $this->id;
		}
		
	}

?>